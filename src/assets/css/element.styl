@import './layout.styl'

btn($size=14px,$color=#fff,$bgcolor=#F04752,$padding=5px,$radius=5px,
$border=1px,$bordercolor=#F04752,$lineheight=1){
  padding: $padding;
  background-color: $bgcolor;
  border-radius: $radius;
  border: $border solid $bordercolor;
  font-size: $size;
  color: $color;
  text-align: center;
  line-height: $lineheight;
  display: inline-block;
}

bgimg($img){
  background-image: url($img);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}
bgimgnoimg(){
background-repeat: no-repeat;
background-size: cover;
background-position: center center;
}

list($direction=column){
  flex($direction)
}

panel($bgcolor=#fff,$padding=0,$margin=20px 0,$height=112px,$txtPadding=0 32px,$color=#333,$fontSize=32px){
  background: $bgcolor;
  padding: $padding;
  margin: $margin;
  >h4{
    height: $height;
    line-height: $height;
    padding: $txtPadding;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    text-align: center;
    color: $color;
    font-size: $fontSize
  }
}
